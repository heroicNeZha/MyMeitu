<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rotate_clockwise_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:layout_gravity="left|top"
            android:background="@drawable/black_tranp_circle_ripple"
            android:src="@drawable/rotate_clockwise_icon" />
        <ImageView
            android:id="@+id/rotate_anticlockwise_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:layout_gravity="center|top"
            android:background="@drawable/black_tranp_circle_ripple"
            android:src="@drawable/rotate_anticlockwise_icon" />
        <ImageView
            android:id="@+id/filp_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:layout_gravity="right|top"
            android:background="@drawable/black_tranp_circle_ripple"
            android:src="@drawable/flip_icon" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/opBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/confirm_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:background="@drawable/black_tranp_circle_ripple"
            android:src="@drawable/confirm_icon" />

        <ImageView
            android:id="@+id/cancel_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:background="@drawable/black_tranp_circle_ripple"
            android:src="@drawable/cancel_icon" />
    </RelativeLayout>
</FrameLayout>