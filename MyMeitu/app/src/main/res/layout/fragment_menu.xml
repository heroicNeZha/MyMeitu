<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="bottom">

    <HorizontalScrollView
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/crop_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_margin="16dp"
                android:background="@drawable/black_tranp_circle_ripple"
                android:padding="8dp"
                android:src="@drawable/crop_icon" />


            <ImageView
                android:id="@+id/rotate_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="16dp"
                android:background="@drawable/black_tranp_circle_ripple"
                android:padding="8dp"
                android:src="@drawable/rotate_icon" />

            <ImageView
                android:id="@+id/mark_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="16dp"
                android:background="@drawable/black_tranp_circle_ripple"
                android:padding="8dp"
                android:src="@drawable/mark_icon" />

            <ImageView
                android:id="@+id/text_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="16dp"
                android:background="@drawable/black_tranp_circle_ripple"
                android:padding="8dp"
                android:src="@drawable/text_icon" />
            

            <ImageView
                android:id="@+id/save_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_margin="16dp"
                android:background="@drawable/black_tranp_circle_ripple"
                android:padding="8dp"
                android:src="@drawable/save_icon" />

        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>